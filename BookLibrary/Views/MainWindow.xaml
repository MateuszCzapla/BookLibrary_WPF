<Window x:Class="BookLibrary.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLibrary.Views"
        xmlns:vm="clr-namespace:BookLibrary.ViewModels"
        mc:Ignorable="d"
        Title="Book Library" Height="450" Width="800">
    
    <Window.Resources>
        <vm:LibraryGridViewModel x:Key="LibraryGridViewModel" />
    </Window.Resources>

    <Grid DataContext="{StaticResource LibraryGridViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DataGrid x:Name="LibararyGrid"
                  AlternatingRowBackground="Gray"
                  Grid.Column="0"
                  VerticalAlignment="Stretch"
                  ItemsSource="{Binding Path=LibraryGrid}"
        />
        
        <CheckBox Content="CheckBox" Grid.Column="1" IsChecked="{Binding Path=EditMode}" />
    </Grid>
</Window>
