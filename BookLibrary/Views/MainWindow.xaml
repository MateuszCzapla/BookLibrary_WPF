<Window x:Class="BookLibrary.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLibrary.Views"
        xmlns:vm="clr-namespace:BookLibrary.ViewModels"
        mc:Ignorable="d"
        Title="Book Library" Height="450" Width="800">


    <Window.Resources>
        <vm:ResultViewModel x:Key="resultViewModel" />
        <vm:QueryViewModel x:Key="queryViewModel" />
        <vm:MainMenuViewModel x:Key="mainMenuViewModel" />
        <vm:StatusViewModel x:Key="statusViewModel" />
        <vm:BaseViewModel x:Key="baseViewModel" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Menu x:Name="mainMenu" Grid.Row="0" Grid.ColumnSpan="2" IsMainMenu="true" DataContext="{StaticResource mainMenuViewModel}">
            <MenuItem Header="_File">
                <MenuItem Command="ApplicationCommands.Close"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Command="ApplicationCommands.Copy"/>
                <MenuItem Command="ApplicationCommands.Cut"/>
                <MenuItem Command="ApplicationCommands.Paste"/>
            </MenuItem>
            <MenuItem Header="_Mode">
                <MenuItem Header="_Author" Command="{Binding ModeCommand}" CommandParameter="author"/>
                <MenuItem Header="_Book" Command="{Binding ModeCommand}" CommandParameter="book"/>
                <MenuItem Header="_Reader" Command="{Binding ModeCommand}" CommandParameter="reader"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>

        <GroupBox Header="Result" Margin="10" Padding="10" Grid.Column="0" Grid.Row="1" DataContext="{StaticResource resultViewModel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <DataGrid AlternatingRowBackground="Gray" VerticalAlignment="Stretch" Grid.Row="0" Grid.ColumnSpan="5" ItemsSource="{Binding Path=LibraryGrid}">
                    <DataGrid.Columns>
                        <!--<DataGridCheckBoxColumn Header="Delete" IsThreeState="False" Binding="{Binding OnlineOrderFlag}" />-->
                        <DataGridCheckBoxColumn Header="Delete" IsThreeState="False" />
                    </DataGrid.Columns>
                </DataGrid>
                <Button Content="First" Grid.Column="0" Grid.Row="1" Command="{Binding FirstPageCommand}" CommandParameter="{StaticResource resultViewModel}" />
                <Button Content="Previous" Grid.Column="1" Grid.Row="1" Command="{Binding PreviousPageCommand}" CommandParameter="{StaticResource resultViewModel}" />
                <Label Grid.Column="2" Grid.Row="1" Content="{Binding PageDisplay}" />
                <Button Content="Next" Grid.Column="3" Grid.Row="1" Command="{Binding NextPageCommand}" CommandParameter="{StaticResource resultViewModel}" />
                <Button Content="Last" Grid.Column="4" Grid.Row="1" Command="{Binding LastPageCommand}" CommandParameter="{StaticResource resultViewModel}" />

                <TextBox Grid.Column="0" Grid.Row="2" Text="{Binding Path=RowsCount}"/>
            </Grid>
        </GroupBox>

        <!--
        <GroupBox Header="Query" Margin="10" Padding="10" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" DataContext="{StaticResource queryViewModel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                
                <CheckBox Grid.Column="0" Grid.Row="0" IsChecked="{Binding Path=EditMode}" />
                <TextBox Grid.Column="0" Grid.Row="1" Text="{Binding Path=SearchText}" />
                <Button Content="Search" Grid.Column="0" Grid.Row="2" Command="{Binding SearchCommand}" CommandParameter="{StaticResource queryViewModel}" />
            </Grid>
        </GroupBox>
        -->
        <ContentControl Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Content="{Binding}" />

        <!--
        <GroupBox Header="Modify" Margin="10" Padding="10" Grid.Column="0" Grid.Row="2">
        </GroupBox>
        -->
        <ContentControl Grid.Column="0" Grid.Row="2" Content="{Binding}" />

        <StatusBar Grid.ColumnSpan="2" Grid.Row="3" DataContext="{StaticResource baseViewModel}">
            <StatusBarItem>
                <Label Content="{Binding Path=TestBase}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
