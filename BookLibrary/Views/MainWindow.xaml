<Window x:Class="BookLibrary.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLibrary.Views"
        xmlns:vm="clr-namespace:BookLibrary.ViewModels"
        mc:Ignorable="d"
        Title="Book Library" Height="450" Width="800">
    
    <Window.Resources>
        <vm:LibraryGridViewModel x:Key="libraryGridViewModel" />
    </Window.Resources>

    <Grid DataContext="{StaticResource libraryGridViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Menu x:Name="mainMenu" Grid.Row="0">
            <MenuItem Header="_Edit">
                <MenuItem Command="ApplicationCommands.Copy"/>
                <MenuItem Command="ApplicationCommands.Cut"/>
                <MenuItem Command="ApplicationCommands.Paste"/>
            </MenuItem>
            <MenuItem Header="_Help" />
        </Menu>

        <DataGrid
            x:Name="LibararyGrid"
            AlternatingRowBackground="Gray"
            Grid.Column="0"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            VerticalAlignment="Stretch"
            ItemsSource="{Binding Path=LibraryGrid}"
        />
        <Button Content="Previous" Grid.Column="0" Grid.Row="2" Command="{Binding PreviousPageCommand}" CommandParameter="{StaticResource libraryGridViewModel}" />
        <Button Content="Next" Grid.Column="1" Grid.Row="2" Command="{Binding NextPageCommand}" CommandParameter="{StaticResource libraryGridViewModel}" />

        <CheckBox Content="CheckBox" Grid.Column="2" Grid.Row="1" IsChecked="{Binding Path=EditMode}" />
        <TextBox Grid.Column="2" Grid.Row="2" Text="{Binding Path=RowsCount}"/>
    </Grid>
</Window>
