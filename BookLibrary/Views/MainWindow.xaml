<Window x:Class="BookLibrary.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:BookLibrary.Views"
        xmlns:viewmodels="clr-namespace:BookLibrary.ViewModels"
        mc:Ignorable="d"
        Title="Book Library" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:QueryAuthorViewModel}">
            <views:QueryAuthorView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:QueryBookViewModel}">
            <views:QueryBookView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:QueryReaderViewModel}">
            <views:QueryReaderView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ModifyAuthorViewModel}">
            <views:ModifyAuthorView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ModifyBookViewModel}">
            <views:ModifyBookView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ModifyReaderViewModel}">
            <views:ModifyReaderView />
        </DataTemplate>

        <viewmodels:ResultViewModel x:Key="resultViewModel" />
        <viewmodels:QueryViewModel x:Key="queryViewModel" />
        <viewmodels:NavigationViewModel x:Key="navigationViewModel" />

        <viewmodels:BindingProxy x:Key="Proxy" Data="{Binding}" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Menu x:Name="mainMenu" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" IsMainMenu="true" DataContext="{StaticResource navigationViewModel}">
            <MenuItem Header="_File">
                <MenuItem Command="ApplicationCommands.Close"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Command="ApplicationCommands.Copy"/>
                <MenuItem Command="ApplicationCommands.Cut"/>
                <MenuItem Command="ApplicationCommands.Paste"/>
            </MenuItem>
            <MenuItem Header="_Mode">
                <MenuItem Header="_Author" Command="{Binding AuthorModeCommand}" />
                <MenuItem Header="_Book" Command="{Binding BookModeCommand}" />
                <MenuItem Header="_Reader" Command="{Binding ReaderModeCommand}" />
            </MenuItem>
            <MenuItem Header="_Settings">
                <MenuItem Header="_Language" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>

        <GroupBox Header="Result" Margin="10" Padding="10" Grid.Row="1" Grid.Column="0" DataContext="{StaticResource resultViewModel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0" Grid.ColumnSpan="5" AlternatingRowBackground="Gray" VerticalAlignment="Stretch" ItemsSource="{Binding Path=LibraryGrid}">
                    <DataGrid.Columns>
                        <!--<DataGridCheckBoxColumn Header="Delete" IsThreeState="False" Binding="{Binding OnlineOrderFlag}" />-->
                        <DataGridCheckBoxColumn Header="Delete" IsThreeState="False" />
                    </DataGrid.Columns>
                </DataGrid>
                <Button Content="First" Grid.Column="0" Grid.Row="1" Command="{Binding FirstPageCommand}" CommandParameter="{StaticResource resultViewModel}" />
                <Button Content="Previous" Grid.Column="1" Grid.Row="1" Command="{Binding PreviousPageCommand}" CommandParameter="{StaticResource resultViewModel}" />
                <Label Grid.Column="2" Grid.Row="1" Content="{Binding PageDisplay}" />
                <Button Content="Next" Grid.Column="3" Grid.Row="1" Command="{Binding NextPageCommand}" CommandParameter="{StaticResource resultViewModel}" />
                <Button Content="Last" Grid.Column="4" Grid.Row="1" Command="{Binding LastPageCommand}" CommandParameter="{StaticResource resultViewModel}" />
                <!--<TextBox Grid.Row="2" Grid.Column="0" Text="{Binding Path=RowsCount}"/>-->
                <ComboBox Grid.Row="2" Grid.Column="0">
                    <ComboBoxItem>1</ComboBoxItem>
                    <ComboBoxItem>2</ComboBoxItem>
                    <ComboBoxItem>3</ComboBoxItem>
                </ComboBox>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Header="Query" Margin="10" Padding="10" DataContext="{StaticResource navigationViewModel}">
            <ContentControl Content="{Binding SelectedQueryViewModel}" />
        </GroupBox>

        <GroupBox Grid.Column="0" Grid.Row="2" Header="Modify" Margin="10" Padding="10" DataContext="{StaticResource navigationViewModel}">
            <ContentControl Grid.Column="0" Grid.Row="2" Content="{Binding SelectedModifyViewModel}" />
        </GroupBox>

        <StatusBar Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" DataContext="{StaticResource navigationViewModel}">
            <StatusBarItem>
                <Label Content="{Binding ModeStatus}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
