<UserControl x:Class="BookLibrary.Views.BookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:BookLibrary.Views"
             xmlns:viewmodels="clr-namespace:BookLibrary.ViewModels"
             xmlns:converters="clr-namespace:BookLibrary.Views.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <viewmodels:BookViewModel x:Key="bookViewModel" />
        <converters:ShortToStringConverter x:Key="shortToStringConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
            
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <views:ResultView />

        <Label Grid.Row="0" Grid.Column="1" Content="Title" />
        <TextBox Grid.Row="0" Grid.Column="2" MaxLength="20" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" ToolTip="{Binding ErrorCollection[Title]}" />
        <Label Grid.Row="1" Grid.Column="1" Content="Year" />
        <TextBox Grid.Row="1" Grid.Column="2" MaxLength="4" Text="{Binding Year, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource shortToStringConverter}}" PreviewTextInput="NumberValidation" />
        <Label Grid.Row="2" Grid.Column="1" Content="Modify date (from)" />
        <Label Grid.Row="3" Grid.Column="1" Content="{Binding Path=(viewmodels:BookViewModel.DateFrom)}" />
        <Expander Grid.Row="3" Grid.Column="2" Header="Set date from">
            <Calendar SelectedDate="{Binding Path=(viewmodels:BookViewModel.DateFrom)}"/>
        </Expander>
        <Label Grid.Row="4" Grid.Column="1" Content="Modify date (to)" />
        <Label Grid.Row="5" Grid.Column="1" Content="{Binding Path=(viewmodels:BookViewModel.DateTo)}" />
        <Expander Grid.Row="5" Grid.Column="2" Header="Set date to" IsEnabled="{Binding Path=(viewmodels:BookViewModel.DateToEnable)}">
            <Calendar SelectedDate="{Binding Path=(viewmodels:BookViewModel.DateTo)}" />
        </Expander>
        <Button Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Content="Search" Command="{Binding SearchCommand}" />
    </Grid>
</UserControl>
